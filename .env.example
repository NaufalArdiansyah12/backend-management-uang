# Database
# For Railway MySQL, use DATABASE_URL
DATABASE_URL="mysql://root:password@containers-us-west-xxx.railway.app:3306/railway"

# Or use individual credentials (untuk local development)
# DB_HOST=localhost
# DB_USER=root
# DB_PASSWORD=
# DB_NAME=management_uang

# JWT Secret
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# Server
PORT=3001
NODE_ENV=production

# Frontend URL (Railway akan provide URL frontend Anda)
CLIENT_URL="https://your-frontend.railway.app"
